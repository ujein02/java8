package sec2;

import java.util.ArrayList;
import java.util.List;

public class ListEx1 {

	public static void main(String[] args) {
		List<String> lst1 = new ArrayList<String>();
		lst1.add("김태엽");		// 요소 추가
		lst1.add("유광현");
		System.out.println(lst1);
		lst1.remove(1);
		System.out.println(lst1);
		lst1.add("김지훈");
