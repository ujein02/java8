package sec3;

public class MotorCycle {
	Tire frontTire = new Tire(6, "앞쪽");
	Tire backTire = new Tire(7, "뒤쪽");
	
	public MotorCycle() { }
	
	public int run() {
		System.out.println("----- 오토바이가 달립니다. -----");
		if(frontTire.roll()==false) {stop(); return 1; }
		if(backTire.roll()==false) {stop(); return 2; }
		return 0;
	}
}
