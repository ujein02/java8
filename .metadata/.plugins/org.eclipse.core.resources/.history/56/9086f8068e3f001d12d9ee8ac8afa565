package sec2;
class A {}
class B extends A{}
class C extends A { }

class D extends B { }
class E extends C { }

public class PromotionEx {
		B b = new B();
		C c = new C();
		D d = new D();
		E e = new E();
		
		A a1 = b;
		A a2 = c;
		A a3 = d;
		A a4 = e;
		
		B b1 = b;
		//B b2 = c;
		B b3 = d;
		//B b4 = e;
		
		//그러므로 부모자식관계 상에서만 객체를 생성하거나 형변환이 가능함
		//자식부모 관계 상에서는 자동 캐스팅 할 수 없으므로 강제 캐스팅해야 함
		//형제관계는 자동 캐스팅이나 강제 캐스팅 될 수 없다.

	
}
